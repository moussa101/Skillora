# Environment Variables Template
# Copy this file to .env and fill in the values

# ============================================
# DATABASE (Supabase)
# ============================================
# Transaction pooler URL (port 6543) — used by the app at runtime
DATABASE_URL=postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true
# Direct connection URL (port 5432) — used for Prisma migrations
DIRECT_URL=postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres

# ============================================
# BACKEND (NestJS)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
ML_SERVICE_URL=http://ml-service:8000
PORT=3000

# ============================================
# FRONTEND (Next.js)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# ============================================
# EMAIL (Resend) — optional
# ============================================
# Get your API key at https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxx
# Use 'onboarding@resend.dev' for testing (no custom domain needed)
RESEND_FROM_EMAIL=onboarding@resend.dev

# ============================================
# OAUTH — optional
# ============================================
# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# ============================================
# ML SERVICE (FastAPI) — optional
# ============================================
ML_PORT=8000
# GitHub token increases API rate limits for profile analysis (60 → 5,000 req/hr)
GITHUB_TOKEN=
